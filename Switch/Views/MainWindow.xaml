<Controls:MetroWindow x:Class="Switch.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Switch.Views"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Switch" Height="450" Width="800">
    <Grid>
        <Button Content="{Binding ProfileLang}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127"/>
        <Button Content="X"
                Command="{Binding UniversalCommand}" CommandParameter="Del"
                HorizontalAlignment="Left" Margin="142,10,0,0" VerticalAlignment="Top" Width="30"/>
    </Grid>
</Controls:MetroWindow>
